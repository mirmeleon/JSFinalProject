<form id="editOrderForm" action="#/edit/:{{orderId}}" method="post" class="form-group">
    <div class="group">
        <label for="appType" class="label">App Type</label>
        <select id="appType" name="appType" type="text" class="form-control dropdown-toggle" placeholder="App type">
            {{#if Desktop}}<option selected="selected">Desktop</option>  {{else}}<option>Desktop</option>    {{/if}}
            {{#if Mobile}}<option selected="selected">Mobile</option>  {{else}} <option>Mobile</option>    {{/if}}
            {{#if Web}}<option selected="selected">Web</option>  {{else}}<option>Web</option>  {{/if}}
            {{#if Hybrid}}<option selected="selected">Hybrid</option>  {{else}}<option>Hybrid</option> {{/if}}
        </select>
    </div>

    <div class="group">
        <label for="nameOfApp" class="label">Name Of App</label>
        <input id="nameOfApp" name="nameOfApp" type="text" class="form-control" data-type="text" maxlength="35" value="{{nameOfApp}}">
    </div>

    <div class="group">
        <label for="numberOfPage" class="label">Number Of Page</label>
        <input id="numberOfPage" name="pageCount" type="number" class="form-control" data-type="number" value="{{pageCount}}">
    </div>

    <fieldset class="form-group">
        <legend>Do you have ready design?</legend>
        <div class="form-check">
            <label class="form-check-label">
                <input type="radio" class="form-check-input" name="designElements" id="optionsRadios1" value="Yes" {{checkYes}}>
                YES
            </label>
        </div>
        <div class="form-check">
            <label class="form-check-label">
                <input type="radio" class="form-check-input" name="designElements" id="optionsRadios2" value="No" {{checkNo}}>
                NO
            </label>
        </div>
    </fieldset>

    <div class="group">
        <label for="deadline" class="label">Enter your deadline(if you have)</label>
        <input id="deadline" name="deadline" type="date" class="form-control" data-type="date" value="{{deadline}}">
    </div>

    <div class="form-group">
        <label for="functionality">Describe desired functionality:</label>
        <textarea class="form-control" id="functionality" name="functionality" rows="5" maxlength="100">{{functionality}}</textarea>
    </div>

    <div class="form-group">
        <label for="comment">Leave your comment here</label>
        <textarea class="form-control" id="comment" name="comment" rows="5" maxlength="100">{{comment}}</textarea>
    </div>

    <div class="group">
        <input type="submit" id="editBtn" class="button" value="Edit Order">
    </div>
    <div class="hr"></div>

</form>